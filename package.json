		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"generate-types": "supabase gen types typescript --local > src/lib/supabase/database.ts"
	},
	"dependencies": {
		"@supabase/auth-helpers-sveltekit": "^0.11.0",
		"@supabase/supabase-js": "^2.39.3",
